<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_560"
    android:background="@drawable/shape_dialog_area"
    android:paddingBottom="@dimen/dp_25"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_26"
        android:text="@string/position_mark"
        android:textColor="@color/c_0D204C"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/closeIv"
        app:layout_constraintTop_toTopOf="@+id/closeIv" />

    <ImageView
        android:id="@+id/closeIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_marginRight="@dimen/dp_14"
        android:src="@mipmap/icon_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/closeIv">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addressV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_26"
            android:background="@drawable/shape_edit_blue"
            android:paddingLeft="@dimen/dp_26"
            android:paddingRight="@dimen/dp_15"
            android:visibility="gone">

            <TextView
                android:id="@+id/addressTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/select_address"
                android:textColor="@color/c_001A2B"
                android:textColorHint="@color/c_8C9AA3"
                android:textSize="@dimen/sp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_pulldown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buildingNoV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_26"
            android:background="@drawable/shape_edit_blue"
            android:paddingLeft="@dimen/dp_26"
            android:paddingRight="@dimen/dp_15"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/addressV">

            <TextView
                android:id="@+id/buildingNoTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/select_building_no"
                android:textColor="@color/c_001A2B"
                android:textColorHint="@color/c_8C9AA3"
                android:textSize="@dimen/sp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_pulldown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/numberPliesV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_26"
            android:background="@drawable/shape_edit_blue"
            android:paddingLeft="@dimen/dp_26"
            android:paddingRight="@dimen/dp_15"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/buildingNoV">

            <TextView
                android:id="@+id/numberPliesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/select_number_plies"
                android:textColor="@color/c_001A2B"
                android:textColorHint="@color/c_8C9AA3"
                android:textSize="@dimen/sp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_pulldown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/horizontalAxesV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_26"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/numberPliesV">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/horizontalAxesStartV"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_52"
                android:layout_marginRight="@dimen/dp_7"
                android:background="@drawable/shape_edit_blue"
                android:paddingLeft="@dimen/dp_26"
                android:paddingRight="@dimen/dp_15"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/horizontalAxesEndV">

                <TextView
                    android:id="@+id/horizontalAxesStartTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/horizontal_axes_start"
                    android:textColor="@color/c_001A2B"
                    android:textColorHint="@color/c_8C9AA3"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_pulldown"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/whippletree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/whippletree"
                android:textColor="@color/c_001A2B"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/horizontalAxesEndV"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_52"
                android:layout_marginLeft="@dimen/dp_7"
                android:background="@drawable/shape_edit_blue"
                android:paddingLeft="@dimen/dp_26"
                android:paddingRight="@dimen/dp_15"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/horizontalAxesStartV"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/horizontalAxesEndTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/horizontal_axes_end"
                    android:textColor="@color/c_001A2B"
                    android:textColorHint="@color/c_8C9AA3"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_pulldown"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/verticalAxesV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_26"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/horizontalAxesV">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/verticalAxesStartV"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_52"
                android:layout_marginRight="@dimen/dp_7"
                android:background="@drawable/shape_edit_blue"
                android:paddingLeft="@dimen/dp_26"
                android:paddingRight="@dimen/dp_15"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/verticalAxesEndV">

                <TextView
                    android:id="@+id/verticalAxesStartTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/vertical_axes_start"
                    android:textColor="@color/c_001A2B"
                    android:textColorHint="@color/c_8C9AA3"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_pulldown"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/whippletree1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/whippletree"
                android:textColor="@color/c_001A2B"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/verticalAxesEndV"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_52"
                android:layout_marginLeft="@dimen/dp_7"
                android:background="@drawable/shape_edit_blue"
                android:paddingLeft="@dimen/dp_26"
                android:paddingRight="@dimen/dp_15"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/verticalAxesStartV"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/verticalAxesEndTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/vertical_axes_end"
                    android:textColor="@color/c_001A2B"
                    android:textColorHint="@color/c_8C9AA3"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_pulldown"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/remarkV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_26"
        android:background="@drawable/shape_edit_blue"
        android:paddingLeft="@dimen/dp_26"
        android:paddingRight="@dimen/dp_26"
        app:layout_constraintTop_toBottomOf="@+id/topV">

        <EditText
            android:id="@+id/rxEt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/location_remark"
            android:textColor="@color/c_001A2B"
            android:textColorHint="@color/c_8C9AA3"
            android:textSize="@dimen/sp_15" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginRight="@dimen/dp_26"
        android:background="@drawable/shape_0071bc_12"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>